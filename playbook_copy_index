---
- name: Copy index.html using Jinja2 template
  hosts: ubuntu1
  become: true
  vars:
    http_port: 80

  tasks:
    - name: Copy index.html.j2 template to remote
      template:
        src: index.html.j2   # Ensure this matches your actual template filename
        dest: /var/www/html/index2.html
      notify:
        - restart apache

  handlers:
    - name: restart apache
      service:
        name: apache2
        state: restarted

